{% block form_row %}
    {% spaceless %}
        <div class="form-group{% if errors|length > 0  %} has-error{% endif %}">
            {{ form_label(form, label|default(null), { 'label_attr': {'class': 'control-label'}}) }}
            {{ form_widget(form, { 'attr': {'class': 'form-control'} }) }}
            {% if errors|length > 0  %}
                <span class="help-block">
                    {% for error in errors %}
                        {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}
                    {% endfor %}
                </span>
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="alert alert-danger">
                    {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}
                </div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block form_widget_simple %}
    {% set type = type|default('text') %}
    <input type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endblock form_widget_simple %}

{% block rating_widget %}
    {% spaceless %}
    {{ block('hidden_widget') }}

    <div id="rating_number"></div>

    <script type="text/javascript">
      jQuery(function() {
        jQuery('#rating_number').raty({
            starOff: '{{ asset('bundles/coastersworldsite/images/star-off-big.png') }}',
            starOn: '{{ asset('bundles/coastersworldsite/images/star-on-big.png') }}',
            starHalf: '{{ asset('bundles/coastersworldsite/images/star-half-big.png') }}',
            half: true,
            size: 24,
            target:  '#{{id}}',
            targetType: 'number',
            targetKeep: true,
            score: {{value ? value : '0'}},
            click: function() {
                jQuery(this).closest("form").submit();
            },
            width: false
        });
      });
    </script>
    {% endspaceless %}
{% endblock %}
