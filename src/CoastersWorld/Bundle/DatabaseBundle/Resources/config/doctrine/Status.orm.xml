<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="CoastersWorld\Bundle\DatabaseBundle\Entity\Status" table="ref_status">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="idTechnical" type="integer" column="id_technical" length="2" nullable="false"/>
        <field name="name" type="string" column="name" length="64" nullable="false"/>
        <one-to-many field="coasters" target-entity="Coaster" mapped-by="status"/>
    </entity>
</doctrine-mapping>