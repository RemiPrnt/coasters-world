<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CoastersWorld\Bundle\DatabaseBundle\Entity\Rating" table="rating">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY" />
    </id>
    <field name="value" type="decimal" column="value" precision="2" scale="1" nullable="false" />
    <many-to-one field="coaster" target-entity="Coaster" inversed-by="ratings" />
    <many-to-one field="user" target-entity="CoastersWorld\Bundle\UserBundle\Entity\User" inversed-by="ratings" />
  </entity>
</doctrine-mapping>
