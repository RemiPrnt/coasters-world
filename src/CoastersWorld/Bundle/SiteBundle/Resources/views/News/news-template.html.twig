{% extends '::base.html.twig' %}

{% block title %}{{ 'news.title.home'|trans }}{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-9">
			{% block newscontent %}{% endblock %}
		</div>

		<div class="col-md-3">
			{% block newssidebar %}
				<aside class="sidebar">
	                <form>
						<div class="input-group">
							<input class="form-control" placeholder="Recherche" name="s" id="s" type="text">
							<span class="input-group-btn">
								<button type="submit" class="btn btn-primary"><i class="icon icon-search"></i></button>
							</span>
						</div>
					</form>
	                <hr />
	                {{ render(controller('CoastersWorldSiteBundle:News:mostPopular', { 'number': 3 })) }}
	            </aside>
			{% endblock %}
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('bundles/coastersworldsite/js/thumbnail.js') }}"></script>
{% endblock %}
