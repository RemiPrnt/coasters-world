{% extends '::base.html.twig' %}

{% block title %}{{ 'news.title.create'|trans }}{% endblock %}

{# form_theme form with 'CoastersWorldSiteBundle:Form:fields.html.twig' #}

{% block body %}
    <div class="row">
        <div class="span8">
            <div class="content">
                <section class="blog">
                    <div class="page-header">
                        <h1>{{ 'news.title.create'|trans }}</h1>
                    </div>
                    {{ form_start(form) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.body) }}
                        {{ form_row(form.publishedAt) }}
                        {{ form_row(form.author) }}
                    
                        {{ form_rest(form) }}
                        <button type="submit" id="submit" class="btn btn-large">{{ 'news.save'|trans }}</button>
                        {#<button type="submit" id="submit" class="btn btn-large">{{ 'news.reset'|trans }}</button>#}
                    {{ form_end(form) }}
                </section>
            </div>
        </div>
    </div>
{% endblock %}
