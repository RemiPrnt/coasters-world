{% extends '::base.html.twig' %}

{% block title %}abcd{% endblock %}

{% block body %}
	<div class="row">
		<div class="span12">
  		<div class="page-header"><h1>Mon coaster counter</h1></div>
		  <table class="table">
        <tr>
          <th>Nom</th>
          <th>Parc</th>
          <th>Statut</th>
        </tr>
  			{% for coaster in listCoaster %}
        <tr>
          <td>{{ coaster.name }}</td>
          <td>{{ coaster.park.name }}</td>
          <td>{{ coaster.status.name }}</td>
        </tr>
				{% endfor %}
      </table>
		</div>
  </div>
{% endblock %}
