{% block title %}abcd{% endblock %}

{% import 'GloomyPagerBundle:Pager:macros.html.twig' as helper %}

{% block stylesheets %}
  {{ parent() }}
  {{ helper.stylesheets() }}
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ helper.javascripts() }}
{% endblock %}

{% block body %}
