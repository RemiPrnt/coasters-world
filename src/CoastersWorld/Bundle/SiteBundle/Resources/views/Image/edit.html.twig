{% extends '::base.html.twig' %}

{% block page_top_main %}Edition image{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/coastersworldsite/vendor/magnific-popup/magnific-popup.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/coastersworldsite/vendor/select2/select2.min.js') }}"></script>
    <script type="text/javascript">
        jQuery('#image_type_coaster').select2();
        jQuery('#image_type_tags').select2({tags:[{% for tag in tags %}"{{ tag }}",{% endfor %}]});
    </script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/coastersworldsite/vendor/magnific-popup/magnific-popup.css') }}" media="screen">
    <link rel="stylesheet" href="{{ asset('bundles/coastersworldsite/vendor/select2/select2.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/coastersworldsite/vendor/select2-bootstrap-css/select2-bootstrap.css') }}" />
{% endblock %}

{% block body %}
<div class="row">
    <a class="img-thumbnail lightbox" href="{{ asset(images_path ~ '/' ~ image.path) }}" data-plugin-options="{'type':'image'}">
        <img class="img-responsive" width="215" src="{{ (images_path ~ '/' ~ image.path)|imagine_filter('thumb_image') }}">
        <span class="zoom">
            <i class="icon icon-16 icon-white-shadowed icon-search"></i>
        </span>
    </a>
</div>
<div class="row">
    <div class="col-md-8">
        {{ form_start(form) }}
            {{ form_rest(form) }}
            <input type="submit" value="{{ 'article.save'|trans }}" class="btn btn-primary btn-lg" data-loading-text="Loading...">
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
