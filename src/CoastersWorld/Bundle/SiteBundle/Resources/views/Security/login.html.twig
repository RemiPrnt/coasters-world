{% extends '::base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
<section id="login">
    <div class="row">
        {% if error %}
            <div class="alert alert-error">{{ error.message }}</div>
        {% endif %}
        <div class="col-md-4">
                
            <h2>{{ 'login.title'|trans }}</h2>
            
            <div class="internal-login">
                <form action="{{ path('login_check') }}" class="form" method="post">
                    <div class="form-group">
                        <i class="icon icon-user" style="font-size:18px;margin-right:15px;"></i>
                        <label>{{ 'login.username'|trans }} :</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'login.username'|trans }}">    
                    </div>
                    <div class="form-group">
                        <i class="icon icon-key" style="font-size:18px;margin-right:11px;"></i>
                        <label>{{ 'login.password'|trans }} :</label>
                        <input type="password" id="password" name="_password" class="form-control" placeholder="{{ 'login.password'|trans }}">
                    </div>
                    <div class="form-actions">
                        <ul class="unstyled">
                            <li><a href="#">{{ 'login.create_account'|trans }}</a></li>
                            <li><a href="#">{{ 'login.password_forgot'|trans }}</a></li>
                        </ul>
                        <div class="pull-right">
                            <button type="submit" class="btn btn-large">{{ 'login.title'|trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>
{% endblock %}
