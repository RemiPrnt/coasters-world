{% extends '::base.html.twig' %}

{% block title %}{{ 'news.title.create'|trans }}{% endblock %}

{% block page_top_main %}Rédiger une news{% endblock %}

{% form_theme form with '::fields.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-9">
            <div class="tabs">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#news-form" data-toggle="tab"><i class="icon icon-edit"></i> Formulaire</a>
                    </li>
                    <li>
                        <a href="#news-previ" data-toggle="tab"><i class="icon icon-eye"></i> Prévisualisation</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="news-form" class="tab-pane active">
                        {{ form_start(form) }}
                            {{ form_row(form.title, {'attr': {'class': 'input-block-level'}}) }}
                            {{ form_row(form.body, {'attr': {'class': 'input-block-level', 'rows': '15'}}) }}
                            {{ form_row(form.coaster, {'attr': {'class': 'input-block-level'}}) }}
                            {{ form_row(form.image, {'attr': {'class': 'input-block-level'}}) }}
                            <div id="image-previ">
                                {% if news.image %}
                                    <img class="img-thumbnail" src="{{ (images_path ~ '/' ~ news.image.path)|imagine_filter('news') }}" alt="">
                                {% endif %}
                            </div>

                            {{ form_rest(form) }}
                            <input type="submit" value="{{ 'news.save'|trans }}" class="btn btn-primary btn-lg" data-loading-text="Loading...">
                            <input type="submit" value="{{ 'news.disable'|trans }}" class="btn btn-danger btn-lg" data-loading-text="Loading...">
                        {{ form_end(form) }}
                    </div>
                    <div id="news-previ" class="tab-pane"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/coastersworldsite/vendor/select2/select2.min.js') }}"></script>
    <script type="text/javascript">
        $('#news_type_coaster').select2();
        $('#news_type_tags').select2({tags:[{% for tag in tags %}"{{ tag }}",{% endfor %}]});
        $('#news_type_thumbnail').select2({
            placeholder: 'Chercher une image...',
            minimumInputLength: 2,
            ajax: {
                url: "{{ path('cw_image_search_ajax') }}",
                dataType: 'json',
                quietMillis: 200,
                data: function (term, page) {
                    return {
                        q: term
                    };
                },
                results: function (data, page) {
                    return {results: data};
                }
            },
            formatResult: formatImage,
            formatSelection: function (data) { return data.name },
        })
        .on("select2-selecting", function(e) {
            $('#image-previ').html('<img class="img-thumbnail" src="'+e.object.src_news+'" alt="">');
        });

        function formatImage (data) {
            return '<div class="post-image">'+data.name+'<div class="img-thumbnail"><img src="'+data.src_thumb+'" alt="" /></div></div>';
        }
    </script>
    <script type="text/javascript">
        $( document ).ready(function() {
            // Prévisualisation HTML
            $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                if(e.target.hash == '#news-previ') {
                    var imgLoading = '<img class="center-block" src="{{ asset('bundles/coastersworldsite/vendor/mediaelement/loading.gif') }}" />';

                    $.ajax({
                        type: "POST",
                        url: "{{ path('cw_news_md_to_html_ajax') }}",
                        data: { markdown: $('textarea#news_type_body').val() },
                        beforeSend: function() {
                            $("#news-previ").html(imgLoading);
                        }
                    })
                    .done(function(html) {
                        $("#news-previ").html(html);
                    })
                    .fail(function() {
                        $("#news-previ").html('Impossible de charger la prévisualisation.');
                    });
                }
            })
        });
    </script>
{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('bundles/coastersworldsite/vendor/select2/select2.css') }}" />
  <link rel="stylesheet" href="{{ asset('bundles/coastersworldsite/vendor/select2-bootstrap-css/select2-bootstrap.css') }}" />
{% endblock %}
