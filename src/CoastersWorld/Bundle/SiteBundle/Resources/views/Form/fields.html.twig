{% block form_row %}
{% spaceless %}
    <div class="control-group {% if errors|length > 0 %}error{% endif %}">
        {{ form_label(form, label|default(null)) }}
        <div class="controls">
            {{ form_widget(form) }}
            {{ form_errors(form)}}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
{% spaceless %}
    {% if errors|length > 0 %}

    {% for error in errors %}
    <div class="help-inline">
      {{ error.messageTemplate|trans(error.messageParameters, 'validators') }}
    </div>
    {% endfor %}

    {% endif %}
{% endspaceless %}
{% endblock form_errors %}

{% block rating_widget %}
    {% spaceless %}
    {{ block('hidden_widget') }}

    <div id="rating_number"></div>

    <script type="text/javascript">
      jQuery(function() {
        jQuery('#rating_number').raty({
            starOff: '{{ asset('bundles/coastersworldsite/images/star-off-big.png') }}',
            starOn: '{{ asset('bundles/coastersworldsite/images/star-on-big.png') }}',
            starHalf: '{{ asset('bundles/coastersworldsite/images/star-half-big.png') }}',
            half: true,
            size: 24,
            target:  '#{{id}}',
            targetType: 'number',
            targetKeep: true,
            score: {{value ? value : '0'}},
            click: function() {
                jQuery(this).closest("form").submit();
            },
            width: false
        });
      });
    </script>
    {% endspaceless %}
{% endblock %}
