<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
  <entity name="CoastersWorld\Bundle\SiteBundle\Entity\Image" table="image" repository-class="CoastersWorld\Bundle\SiteBundle\Entity\Repository\ImageRepository">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="true" unique="false" />
    <field name="path" type="string" column="path" length="255" nullable="false" unique="true" />
    <field name="createdAt" type="datetime" column="created_at" nullable="false" />
    <field name="updatedAt" type="datetime" column="updated_at" nullable="false" />
    <many-to-one field="coaster" target-entity="Coaster" inversed-by="images">
        <join-column name="coaster_id" referenced-column-name="id" />
    </many-to-one>
    <lifecycle-callbacks>
        <lifecycle-callback type="prePersist" method="preUpload" />
        <lifecycle-callback type="preUpdate" method="preUpload" />
        <lifecycle-callback type="postPersist" method="upload" />
        <lifecycle-callback type="postUpdate" method="upload" />
        <lifecycle-callback type="postRemove" method="removeUpload" />
    </lifecycle-callbacks>
  </entity>
</doctrine-mapping>
