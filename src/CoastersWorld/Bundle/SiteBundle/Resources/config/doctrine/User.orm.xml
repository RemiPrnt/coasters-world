<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CoastersWorld\Bundle\SiteBundle\Entity\User" table="user">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="username" type="string" column="username" length="32" nullable="false"/>
    <field name="password" type="string" column="password" length="128" nullable="false"/>
    <field name="salt" type="string" column="salt" length="32" nullable="false"/>
    <field name="activationKey" type="string" column="activation_key" length="32" nullable="true"/>
    <field name="email" type="string" column="email" length="255" nullable="false"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="isActive" type="boolean" column="is_active" nullable="false"/>
    <field name="isVerified" type="boolean" column="is_verified" nullable="false"/>
    <field name="isLocked" type="boolean" column="is_locked" nullable="false"/>
    <many-to-many field="group" target-entity="Group" mapped-by="user" nullable="false"/>
    <one-to-many field="comments" target-entity="CoastersWorld\Bundle\SiteBundle\Entity\Comment"
      mapped-by="author"/>
    <one-to-many field="ratings" target-entity="CoastersWorld\Bundle\SiteBundle\Entity\Rating"
      mapped-by="user"/>
    <many-to-many field="coasters" mapped-by="users" target-entity="Coaster"/>
  </entity>
</doctrine-mapping>
