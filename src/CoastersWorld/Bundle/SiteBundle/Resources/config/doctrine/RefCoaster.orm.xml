<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CoastersWorld\Bundle\SiteBundle\Entity\RefCoaster" table="ref_coaster">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <one-to-many field="coasters" target-entity="Coaster" mapped-by="refCoaster"/>
    <field name="speed" type="smallint" column="speed" nullable="true"/>
    <field name="height" type="smallint" column="height" nullable="true"/>
    <field name="length" type="smallint" column="length" nullable="true"/>
    <field name="inversionNumber" type="smallint" column="inversion_number" nullable="true"/>
    <field name="gForce" type="decimal" column="g_force" nullable="true"/>
    <field name="duration" type="time" column="duration" nullable="true"/>
    <many-to-one field="manufacturer" target-entity="Manufacturer" inversed-by="refCoasters">
      <join-column name="manufacturer_id" referenced-column-name="id"/>
    </many-to-one>
    <many-to-many field="launchs" target-entity="Launch" inversed-by="refCoasters">
      <join-table name="refcoaster_launch">
        <join-columns>
          <join-column name="refcoaster_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="launch_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-one field="restraint" target-entity="Restraint" inversed-by="refCoasters"/>
    <many-to-many field="types" target-entity="Type" inversed-by="refCoasters">
      <join-table name="refcoaster_type">
        <join-columns>
          <join-column name="refcoaster_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="type_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
