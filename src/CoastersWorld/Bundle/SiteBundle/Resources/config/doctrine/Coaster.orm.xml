<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
    xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
  <entity name="CoastersWorld\Bundle\SiteBundle\Entity\Coaster" table="coaster" repository-class="CoastersWorld\Bundle\SiteBundle\Entity\Repository\CoasterRepository">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="64" nullable="true"/>
    <field name="slug" type="string" column="slug" length="64" nullable="false" unique="true">
      <gedmo:slug unique="true" fields="name"/>
    </field>
    <field name="openingDate" type="date" column="opening_date" nullable="true"/>
    <field name="closingDate" type="date" column="closing_date" nullable="true"/>
    <many-to-one field="refCoaster" target-entity="RefCoaster" inversed-by="coasters">
      <join-column name="ref_coaster_id" referenced-column-name="id"/>
    </many-to-one>
    <many-to-one field="park" target-entity="Park" inversed-by="coasters">
      <join-column name="park_id" referenced-column-name="id"/>
    </many-to-one>
    <one-to-many field="ratings" target-entity="Rating" mapped-by="coaster"/>
    <field name="rate" type="decimal" column="rate" precision="5" scale="3" nullable="true"/>
    <many-to-one field="status" target-entity="Status" inversed-by="coasters"/>
    <one-to-many field="images" target-entity="Image" mapped-by="coaster" />
    <one-to-many field="coasterComments" target-entity="CoasterComment" mapped-by="coaster"/>
    <many-to-many field="users" inversed-by="coasters" target-entity="User">
      <join-table name="coasters_users">
        <join-columns>
          <join-column name="coaster_id" referenced-column-name="id" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="user_id" referenced-column-name="id" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
