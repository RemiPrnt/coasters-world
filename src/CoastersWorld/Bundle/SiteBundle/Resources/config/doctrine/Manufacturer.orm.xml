<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="CoastersWorld\Bundle\SiteBundle\Entity\Manufacturer" table="ref_manufacturer">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="name" type="string" column="name" length="255" nullable="false"/>
        <field name="website" type="string" column="website" length="255" nullable="true"/>
        <field name="phoneNumber" type="string" column="phone_number" length="64" nullable="true"/>
        <field name="place" type="string" column="place" length="255" nullable="true"/>
        <one-to-many field="refCoasters" target-entity="RefCoaster" mapped-by="manufacturer"/>
    </entity>
</doctrine-mapping>
