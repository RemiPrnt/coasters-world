<h4 class="title">Comments ({{ comments|length }})<span class="line"></span></h4>

{% for comment in comments %}
<ul class="comments">
    <li class="comment-box">
       <div class="avatar"><img src="{{ asset('images/img/blog/avatar.jpg') }}" alt="" /></div>
       <div class="comment">
         <h4 class="title">{{ comment.author.username }}
         <span class="right">{{ comment.publishedAt|date("F jS \\a\\t g:ia") }} / <a href="#">Reply</a> </span>
         </h4>
         <p>{{ comment.body }}</p>
       </div>
    </li>
</ul>
{% endfor %}
