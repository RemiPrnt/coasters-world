<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CoastersWorld\Bundle\NewsBundle\Entity\User" table="user">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="username" type="string" column="username" length="32" nullable="true"/>
    <field name="password" type="string" column="password" length="128" nullable="true"/>
    <field name="salt" type="string" column="salt" length="128" nullable="true"/>
    <field name="email" type="string" column="email" length="64" nullable="true"/>
    <field name="createdAt" type="datetime" column="created_at" nullable="true"/>
    <field name="isActive" type="boolean" column="is_active" nullable="true"/>
    <many-to-many field="group" target-entity="Group" mapped-by="user"/>
  </entity>
</doctrine-mapping>
