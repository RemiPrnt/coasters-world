<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="CoastersWorld\Bundle\NewsBundle\Entity\Comment" table="comment">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="body" type="text" column="body" nullable="false"/>
    <field name="publishedAt" type="datetime" column="published_at" nullable="false"/>
    <many-to-one field="author" target-entity="CoastersWorld\Bundle\UserBundle\Entity\User"
      inversed-by="comments" nullable="false">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="news" target-entity="News" inversed-by="comments" nullable="false">
      <join-columns>
        <join-column name="news_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
