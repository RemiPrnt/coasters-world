{% extends '::base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
    <div class="sixteen columns bottom-2">
        <h2 class="title">{{ 'login.title'|trans }}<span class="line"></span></h2>
        {% if error %}
            <div>{{ error.message }}</div>
        {% endif %}

        <form action="{{ path('login_check') }}" class="form-elements" method="post">
            <fieldset>
                <label for="username">{{ 'login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />
            </fieldset>
            <fieldset>
                <label for="password">{{ 'login.password'|trans }}</label>
                <input type="password" id="password" name="_password" />
            </fieldset>
            <a onclick="$(this).closest('form').submit();" class="button small color">{{ 'login.title'|trans }}</a>
        </form>
    </div>
{% endblock %}
